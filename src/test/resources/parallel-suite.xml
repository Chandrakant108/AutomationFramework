<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelSuite" parallel="tests" thread-count="4">

    <listeners>
        <listener class-name="org.example.framework.report.TestSuiteReporter"/>
    </listeners>

    <!-- API Tests -->
    <test name="APITests">
        <classes>

            <class name="org.example.tests.GitHubApiTests"/>
            <class name="org.example.tests.GitHubTests"/>
        </classes>
    </test>

    <!-- UI Tests -->
    <test name="UITests">
        <classes>

            <class name="org.example.tests.W3SchoolsTests"/>
            <class name="org.example.tests.WikipediaTests"/>
        </classes>
    </test>

</suite>
